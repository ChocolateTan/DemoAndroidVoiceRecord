<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:orientation="vertical"
  tools:context="com.don.voice.activity.MediaRecorderActivity">

  <Button
    android:id="@+id/btn_media_recorder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Media Recorder" />

  <Button
    android:id="@+id/btn_audio_recorder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Media Recorder2" />

  <Button
    android:id="@+id/btn_audio_recorder2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Audio Recorder" />

  <com.don.voice.BarChartView
    android:id="@+id/bar_chart_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" />
</LinearLayout>
